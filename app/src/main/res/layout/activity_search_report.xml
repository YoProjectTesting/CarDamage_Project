<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.evgeny.cardamage_project.SearchReport">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/carNumToSearch"
        android:hint="Car Number"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/searchQueryButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchCarNumButton"
        android:id="@+id/searchCarNumButton"
        android:layout_alignTop="@+id/carNumToSearch"
        android:layout_toEndOf="@+id/carNumToSearch" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cusNameToSearch"
        android:hint="Customer Name"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/carNumToSearch"
        android:layout_alignStart="@+id/dateToSearch"
        android:layout_marginTop="96dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/dateToSearch"
        android:hint="Date"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/searchQueryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/userToSearch"
        android:hint="User"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/searchQueryButton"
        android:layout_alignStart="@+id/dateToSearch"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchQueryButton"
        android:id="@+id/searchQueryButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/carTypeToSearch"
        android:hint="Car Type"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/cusNameToSearch"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
